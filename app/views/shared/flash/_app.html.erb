<% flash.each do |key, value| %>
  <div class="alert <%= bootstrap_class_for(key) %> alert-dismissible" role="alert">
    <div class="container">
      <%= value %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span class="pointerless" aria-label="true">&times;</span>
    </button>
    </div>
  </div>
<% end %>